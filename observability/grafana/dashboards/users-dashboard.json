{
  "title": "Users Performance Dashboard",
  "tags": ["social-media", "users"],
  "timezone": "browser",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Total Active Users",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "users_active_total",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Total Content Views",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "sum(content_views_total)",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Total Likes",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(content_likes_total)",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 200},
              {"color": "red", "value": 500}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Engagement Rate (Likes/Views %)",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "(sum(content_likes_total) / sum(content_views_total)) * 100",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 20},
              {"color": "green", "value": 30}
            ]
          },
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 5,
      "title": "Content View Rate (per minute)",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(content_views_total[1m]) * 60",
          "refId": "A",
          "legendFormat": "{{content_type}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 6,
      "title": "Like Rate (per minute)",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "rate(content_likes_total[1m]) * 60",
          "refId": "A",
          "legendFormat": "{{content_type}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 7,
      "title": "Content Access Duration (p95)",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 18},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(content_access_duration_bucket[5m]))",
          "refId": "A",
          "legendFormat": "{{content_type}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 8,
      "title": "User Service Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 18},
      "targets": [
        {
          "expr": "rate(user_requests_total[1m]) * 60",
          "refId": "A",
          "legendFormat": "{{endpoint}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqpm",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Views by Content Type",
      "type": "piechart",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 28},
      "targets": [
        {
          "expr": "sum by (content_type) (content_views_total)",
          "refId": "A",
          "legendFormat": "{{content_type}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "pieType": "pie",
        "displayLabels": ["name", "percent"]
      }
    },
    {
      "id": 10,
      "title": "Most Active Users (by views)",
      "type": "table",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 28},
      "targets": [
        {
          "expr": "topk(10, sum by (user_id) (content_views_total))",
          "refId": "A",
          "format": "table",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        }
      }
    }
  ],
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
