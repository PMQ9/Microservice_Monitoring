{
  "title": "Content Creators Dashboard",
  "tags": ["social-media", "creators"],
  "timezone": "browser",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Total Content Creators",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "creators_active_total",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Total Content Created",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "sum(content_created_total)",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Content Creation Rate (per minute)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "rate(content_created_total[1m]) * 60",
          "refId": "A",
          "legendFormat": "{{content_type}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 4,
      "title": "Content by Type",
      "type": "piechart",
      "gridPos": {"h": 10, "w": 8, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "sum by (content_type) (content_created_total)",
          "refId": "A",
          "legendFormat": "{{content_type}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "pieType": "pie",
        "displayLabels": ["name", "percent"]
      }
    },
    {
      "id": 5,
      "title": "Content Creation Duration (p95)",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 8, "x": 8, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(content_creation_duration_bucket[5m]))",
          "refId": "A",
          "legendFormat": "{{content_type}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Creator Service Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 8, "x": 16, "y": 8},
      "targets": [
        {
          "expr": "rate(creator_requests_total[1m]) * 60",
          "refId": "A",
          "legendFormat": "{{endpoint}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqpm",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Top Content Creators by Content Count",
      "type": "table",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 18},
      "targets": [
        {
          "expr": "topk(10, sum by (creator_id) (content_created_total))",
          "refId": "A",
          "format": "table",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Content Creation Timeline",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 18},
      "targets": [
        {
          "expr": "sum(content_created_total)",
          "refId": "A",
          "legendFormat": "Total Content",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 20
          }
        }
      }
    }
  ],
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
